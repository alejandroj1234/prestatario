<div class="container">
  <div class="row featured-boxes login justify-content-center">
    <div class="col-md-12">
      <div class="card signup-box">
        <div class="box-content">
          <header>
            <h2>Sign up</h2>
          </header>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.label :first_name %>
                    <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :last_name %>
                    <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :street %>
                    <%= f.text_field :street, autofocus: true, class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :apartment_number %>
                    <%= f.text_field :apartment_number, autofocus: true, class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :city %>
                    <%= f.text_field :city, autofocus: true, class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :state %>
                    <%= f.text_field :state, autofocus: true, class: "form-control" %>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.label :zip_code %>
                    <%= f.text_field :zip_code, autofocus: true, class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :phone %>
                    <%= f.telephone_field :phone, autofocus: true, class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :email %>
                    <%= f.email_field :email, autofocus: true, class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %>
                    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :password_confirmation %>
                    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                  </div>
                  <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %></br>
                  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
                </div>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>